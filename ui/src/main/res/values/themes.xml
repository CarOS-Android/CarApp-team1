<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_90</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- background -->
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- error -->
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/white</item>

        <!-- surface -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color. -->
        <item name="statusBarBackground">?attr/backgroundColor</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="APPColor.BackgroundBlue">@color/light_blue_300</item>
        <item name="APPColor.BackgroundGreen">@color/light_green_700</item>


        <!--  TYPOGRAPHY -->
        <item name="APPTypography.H1">@style/Headline1</item>
        <item name="APPTypography.H2">@style/Headline2</item>
        <item name="APPTypography.H3">@style/Headline3</item>
        <item name="APPTypography.H4">@style/Headline4</item>
        <item name="APPTypography.45">@style/Headline5</item>
        <item name="APPTypography.H6">@style/Headline6</item>
        <item name="APPTypography.Subtitle01">@style/Subtitle01</item>
        <item name="APPTypography.Subtitle02">@style/Subtitle02</item>
        <item name="APPTypography.Body01">@style/Body01</item>
        <item name="APPTypography.Body02">@style/Body02</item>
        <item name="APPTypography.Button">@style/Button</item>
        <item name="APPTypography.Caption">@style/Caption</item>
        <item name="APPTypography.Overline">@style/Overline</item>

    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.App">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
